{
    "env":
    {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error","unix"],
        "quotes": ["error","single"],
        "semi": ["error","always"],
        "space-before-function-paren": ["error", "never"],
        "object-curly-spacing": ["error", "always"],
        "no-console":"error",
        "keyword-spacing":"error",
        "space-infix-ops":"error",
        "prefer-arrow-callback":"error"
    }
}